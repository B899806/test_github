{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "appName": {
      "type": "string"
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]"
    },
    "serviceplanName": {
        "type": "string" 
    }, 
    "serviceplanSkuName":{
       "type": "string"
    }
  },
  "variables":{}, 
  "resources": [
    {
      "name": "[parameters('serviceplanName')]",
      "type": "Microsoft.Web/serverfarms",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-08-01",
      "sku": {
        "name": "[parameters('serviceplanSkuName')]"
      },
      "dependsOn": [],
      "tags": {

        "Product family": "[resourceGroup().tags['Product family']]",
        "Environment Type": "[resourceGroup().tags['Environment Type']]"
      },
      "properties": {
        "name": "[parameters('serviceplanName')]",
        "numberOfWorkers": 1
      }
    },

    {
      "apiVersion": "2016-08-01",
      "type": "Microsoft.Web/sites",
      "name": "[parameters('AppName')]",
      "location": "[parameters('Location')]",
      "kind": "functionapp",
      "tags": {

        "Product family": "[resourceGroup().tags['Product family']]",
        "Environment Type": "[resourceGroup().tags['Environment Type']]"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', parameters('serviceplanName'))]"
      ],
      "identity": {
        "type": "SystemAssigned"
      },
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('serviceplanName'))]",
        "hostingEnvironment": "",
        "clientAffinityEnabled": false,
        "siteConfig": {
          "alwaysOn": true
        },
        "httpsOnly": true
      }

    },
	
  ],
  "outputs": {
      "tenantId": {
        "type": "string",
        "value": "[reference(resourceId('Microsoft.Web/sites', parameters('appName')), '2018-11-01', 'Full').identity.tenantId]"
    },
    "principalId": {
        "type": "string",
        "value": "[reference(resourceId('Microsoft.Web/sites', parameters('appName')), '2018-11-01', 'Full').identity.principalId]"
    }
  }
}